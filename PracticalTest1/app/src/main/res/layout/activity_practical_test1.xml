<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rdc.practicaltest1.PracticalTest1Activity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp"
        android:maxWidth="150dp"
        android:minWidth="150dp"
        android:enabled="false"
        android:gravity="center"
        android:saveEnabled="false"
        android:inputType="number"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RightText"
        android:layout_alignBottom="@+id/leftText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minWidth="150dp"
        android:maxWidth="150dp"
        android:enabled="false"
        android:gravity="center"
        android:saveEnabled="false"
        android:inputType="number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press me !"
        android:id="@+id/Left_button"
        android:layout_below="@+id/leftText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press me, too!"
        android:id="@+id/Right_button"
        android:layout_alignBottom="@+id/Left_button"
        android:layout_alignRight="@+id/RightText"
        android:layout_alignEnd="@+id/RightText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to activity 2"
        android:id="@+id/go_to_activity2_button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/RightText"
        android:layout_alignEnd="@+id/RightText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
